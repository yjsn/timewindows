<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorBar</item>-->
        <!--<item name="colorPrimaryDark">@color/colorBar</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <item name="colorPrimary">@color/colorBar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- menu的字体颜色（记住不要android:） -->
        <item name="android:textSize">18sp</item>

        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">@color/white</item>

        <item name="android:listDivider">@drawable/divider</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--查看大图页面，全屏显示-->
    <style name="ViewBigPicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--水平分隔线-->
    <style name="horizontalLine">
        <item name="android:background">@color/colorContent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
