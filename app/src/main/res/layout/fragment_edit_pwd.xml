<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:placeholderImage="@drawable/bg"
        fresco:placeholderImageScaleType="focusCrop"
        >
    </com.facebook.drawee.view.SimpleDraweeView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            >
            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pwd_icon"
                android:layout_marginRight="20px"
                />
            <EditText
                android:id="@+id/et_oldpwd"
                android:layout_width="580px"
                android:layout_height="wrap_content"
                android:hint="6-12位原密码"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:background="@null"
                android:maxLength="12"
                android:inputType="textPassword"
                android:maxLines="1"
                style="@style/textSize"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@+id/iv_pwd"
                />
            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/closeeye_icon"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/et_oldpwd"
                />
            <View
                android:layout_below="@+id/et_userpwd"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_30"
                android:layout_marginTop="30px"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            >
            <ImageView
                android:id="@+id/iv_pwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pwd_icon"
                android:layout_marginRight="20px"
                />
            <EditText
                android:id="@+id/et_newpwd"
                android:layout_width="580px"
                android:layout_height="wrap_content"
                android:hint="6-12位原密码"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:background="@null"
                android:maxLength="12"
                android:inputType="textPassword"
                android:maxLines="1"
                style="@style/textSize"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@+id/iv_pwd2"
                />
            <ImageView
                android:id="@+id/iv_eye2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/closeeye_icon"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/et_newpwd"
                />
            <View
                android:layout_below="@+id/et_userpwd"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_30"
                android:layout_marginTop="30px"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            >
            <ImageView
                android:id="@+id/iv_pwd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pwd_icon"
                android:layout_marginRight="20px"
                />
            <EditText
                android:id="@+id/et_newpwd_"
                android:layout_width="580px"
                android:layout_height="wrap_content"
                android:hint="6-12位原密码"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:background="@null"
                android:maxLength="12"
                android:inputType="textPassword"
                android:maxLines="1"
                style="@style/textSize"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@+id/iv_pwd3"
                />
            <ImageView
                android:id="@+id/iv_eye3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/closeeye_icon"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/et_newpwd_"
                />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>