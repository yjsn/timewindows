<?xml version="1.0" encoding="utf-8"?>
<com.singgo.cn.timewindows.widget.MySwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sw_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v4.widget.NestedScrollView
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_directors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSize_info"
                    />

                <TextView
                    android:id="@+id/tv_casts"
                    android:layout_below="@+id/tv_directors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSize_info"
                    />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_below="@+id/tv_casts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSize_info"
                    />
                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_below="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSize_info"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_below="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSize_info"
                    />
                <TextView
                    android:id="@+id/tv_rename"
                    android:layout_below="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSize_info"
                    />
                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_below="@+id/tv_rename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSize_info"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主要演员"
            style="@style/textSize_info"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            />

        <com.singgo.cn.timewindows.base.BaseRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</com.singgo.cn.timewindows.widget.MySwipeRefreshLayout>